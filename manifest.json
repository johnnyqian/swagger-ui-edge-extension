{
  "name": "Swagger UI",
  "description": "An extension to host the swagger-ui.",
  "version": "1.1",
  "manifest_version": 3,
  "icons": {
    "128": "swagger/favicon-32x32.png"
  },
  "action": {
    "default_title": "Swagger UI",
    "default_icon": {
      "16": "swagger/favicon-16x16.png",
      "32": "swagger/favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "background",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*:*/"
  ]
}